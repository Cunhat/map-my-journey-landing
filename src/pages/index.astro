---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Astro.">
	<main class="h-screen flex flex-col">
		<nav class="bg-sky-500 flex items-center justify-between p-3">
			<img src="/icon.png" alt="mmj-logo" class="w-[220px] object-contain" />
		</nav>
		<div class="flex-1 bg-black grid grid-cols-2">
			<div class="bg-sky-500 flex flex-col h-full relative">
				<img src="/screen_1.JPG" alt="mmj-screen-1" class="w-[50%] h-auto object-contain rounded-xl shadow-md absolute top-1/3 left-1/3 transform -translate-x-1/3 -translate-y-1/3 z-10" />
				<img src="/screen_2.JPG" alt="mmj-screen-1" class="w-[50%] h-auto object-contain rounded-xl shadow-md absolute top-3/4 left-[90%] transform -translate-x-3/4 -translate-y-3/4 z-0" />
			</div>
			<div class="flex flex-col items-center justify-center bg-sky-500">
				<div class="w-[60%] flex flex-col gap-4">
					<img src="/icon-app.png" alt="mmj-logo" class="w-20 h-20 object-contain shadow-xl rounded-2xl border border-white" />
					<div class="flex flex-col gap-3">
						<h3 class="text-left text-white text-5xl font-bold">A better way <br>to explore the world!</h3>
						<h3 class="text-left text-white text-base">Pick your places, plan your days, <br>save the best spots, and start exploring!</h3>
					</div>
					<button type="button" class="flex items-center justify-center w-48 mt-3 text-white bg-black h-14 rounded-xl">
						<div class="mr-3">
